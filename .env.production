# Napoleon AI Production Environment Variables

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Clerk Authentication (required for build)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_placeholder_key_for_build_testing
CLERK_SECRET_KEY=sk_test_placeholder_key_for_build_testing

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# OAuth Provider Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret
GOOGLE_REDIRECT_URI=https://napoleon-ai.vercel.app/api/auth/callback/google
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
TEAMS_TENANT_ID=your-microsoft-tenant-id

# NextAuth Configuration
NEXTAUTH_URL=https://napoleon-ai.vercel.app
NEXTAUTH_SECRET=your-production-nextauth-secret-32-chars

# Production URLs and API Keys
VERCEL_URL=napoleon-ai.vercel.app
NEXT_PUBLIC_APP_URL=https://napoleon-ai.vercel.app

# Analytics and Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_CALENDAR_INTEGRATION=true
NEXT_PUBLIC_ENABLE_EMAIL_TEMPLATES=true

# Security Configuration
ENCRYPTION_SECRET=your-32-char-encryption-secret-here
JWT_SECRET=your-jwt-secret-here

# External Service Configuration
WEBHOOK_SECRET=your-webhook-secret-for-integrations